generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma/client"
}

datasource db {
  provider = "postgresql"
}


enum UserRole {
  CITIZEN
  OFFICER
  AUDITOR
}

enum TransactionType {
  CREDIT
  DEBIT
}

enum TransactionStatus {
  PENDING
  CONFIRMED
  FAILED
}

enum CredentialType {
  IDENTITY
  LICENSE
  CERTIFICATE
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  fullName  String
  password  String
  role      UserRole
  didUri    String?
  createdAt DateTime  @default(now())

  transactions Transaction[]
  credentials  Credential[]
  verifications Verification[] 

  @@index([email])
}

model Transaction {
  id          String              @id @default(uuid())
  amount      String
  description String
  type        TransactionType
  status      TransactionStatus
  txHash      String
  date        DateTime            @default(now())

  userId      String
  user        User                @relation(fields: [userId], references: [id])
}

model Credential {
  id          String          @id @default(uuid())
  type        CredentialType
  name        String
  issuer      String
  verified    Boolean         @default(false)
  hash        String
  issuedDate  DateTime        @default(now())
  expiryDate  DateTime?

  userId      String
  user        User            @relation(fields: [userId], references: [id])
}

enum VerificationStatus {
  PENDING
  VERIFIED
  REJECTED
}

model Verification {
  id        String             @id @default(uuid())
  type      String
  status    VerificationStatus @default(PENDING)
  userId    String
  createdAt DateTime           @default(now())

  user      User @relation(fields: [userId], references: [id])

  @@index([userId])
}